{
  "extends": ["config:base"],
  "dependencyDashboard": false,
  "helmv3": {
    "fileMatch": ["charts/.+/Chart\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "bumpVersion": "patch"
    }
  ],
  "regexManagers": [
    {
      "description": "Update tailscale docker image references",
      "fileMatch": ["^charts\\/tailscale-subnet-router\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "depNameTemplate": "ghcr.io/tolkonepiu/tailscale-docker",
      "datasourceTemplate": "docker"
    },
    {
      "description": "Update tailscale docker image references in README.md",
      "fileMatch": ["^charts\\/tailscale-subnet-router\\/README\\.md$"],
      "matchStrings": [
        "AppVersion(:\\s|-)(?<currentValue>v\\d+\\.\\d+\\.\\d+(?:\\+\\d+)?)"
      ],
      "depNameTemplate": "ghcr.io/tolkonepiu/tailscale-docker",
      "datasourceTemplate": "docker"
    }
  ]
}
